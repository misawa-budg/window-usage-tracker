<Window
    x:Class="WinTracker.Viewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinTracker.Viewer"
    Title="WinTracker Viewer">

    <Grid
        Background="{ThemeResource BrushPageBackground}"
        UseLayoutRounding="True">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="28" Spacing="16">
                <Grid>
                    <Border
                        Margin="0,4,0,0"
                        Background="{ThemeResource BrushCardShadow}"
                        CornerRadius="{StaticResource RadiusCard}" />
                    <Border
                        x:Name="HeaderCard"
                        Padding="20"
                        Background="{ThemeResource BrushCardBackground}"
                        BorderBrush="{ThemeResource BrushBorderSoft}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Spacing="6">
                                <TextBlock
                                    FontSize="34"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource BrushTextPrimary}"
                                    Text="WinTracker Viewer" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{ThemeResource BrushTextSecondary}"
                                    Text="Application usage timeline" />
                            </StackPanel>
                            <TextBlock
                                x:Name="StatusTextBlock"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{ThemeResource BrushTextSecondary}"
                                Text="Ready" />
                        </Grid>
                    </Border>
                </Grid>

                <Grid>
                    <Border
                        Margin="0,4,0,0"
                        Background="{ThemeResource BrushCardShadow}"
                        CornerRadius="{StaticResource RadiusCard}" />
                    <Border
                        x:Name="ControlCard"
                        Padding="20"
                        Background="{ThemeResource BrushCardBackground}"
                        BorderBrush="{ThemeResource BrushBorderSoft}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{ThemeResource BrushTextPrimary}"
                                Text="期間" />
                            <ComboBox
                                x:Name="RangeComboBox"
                                Grid.Column="2"
                                MinHeight="40"
                                SelectedIndex="0"
                                SelectionChanged="OnRangeSelectionChanged">
                                <ComboBoxItem Content="24h" />
                                <ComboBoxItem Content="1week" />
                            </ComboBox>
                            <Button
                                x:Name="RefreshButton"
                                Grid.Column="4"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Right"
                                MinHeight="40"
                                Padding="16,10"
                                Background="{ThemeResource BrushCardBackground}"
                                BorderBrush="{ThemeResource ComboBoxBorderBrush}"
                                BorderThickness="2"
                                Foreground="{ThemeResource BrushTextPrimary}"
                                FontSize="14"
                                FontWeight="Normal"
                                CornerRadius="4"
                                Click="OnRefreshClicked"
                                Content="更新" />
                        </Grid>
                    </Border>
                </Grid>

                <Grid>
                    <Border
                        Margin="0,4,0,0"
                        Background="{ThemeResource BrushCardShadow}"
                        CornerRadius="{StaticResource RadiusCard}" />
                    <Border
                        Padding="20"
                        Background="{ThemeResource BrushCardBackground}"
                        BorderBrush="{ThemeResource BrushBorderSoft}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusCard}">
                        <StackPanel Spacing="22">
                            <StackPanel Spacing="10">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource BrushTextPrimary}"
                                    Text="一覧タイムライン" />
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Border
                                        Grid.Row="0"
                                        Margin="0,10,0,10"
                                        Padding="14"
                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="14">
                                        <ItemsControl x:Name="OverviewLegendItemsControl">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="local:LegendItemViewModel">
                                                    <StackPanel Margin="0,0,22,0" Orientation="Horizontal" Spacing="8">
                                                        <Border
                                                            Width="14"
                                                            Height="14"
                                                            VerticalAlignment="Center"
                                                            Background="{x:Bind Fill}"
                                                            CornerRadius="7" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{ThemeResource BrushTextSecondary}"
                                                            Text="{x:Bind Label}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>

                                    <Grid
                                        x:Name="OverviewDailyPanel"
                                        Grid.Row="1"
                                        Margin="0,0,0,10"
                                        Visibility="Collapsed">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="14"
                                            Background="{ThemeResource BrushCardBackgroundSoft}"
                                            BorderBrush="{ThemeResource BrushBorderSoft}"
                                            BorderThickness="1"
                                            CornerRadius="14">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="90" />
                                                </Grid.ColumnDefinitions>
                                            <TextBlock
                                                x:Name="OverviewHeaderLabelTextBlock"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource BrushTextSecondary}"
                                                Text="State" />
                                                <Grid Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        x:Name="Tick00TextBlock"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="00:00" />
                                                    <TextBlock
                                                        x:Name="Tick06TextBlock"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="06:00" />
                                                    <TextBlock
                                                        x:Name="Tick12TextBlock"
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="12:00" />
                                                    <TextBlock
                                                        x:Name="Tick18TextBlock"
                                                        Grid.Column="3"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="18:00" />
                                                    <TextBlock
                                                        x:Name="Tick24TextBlock"
                                                        Grid.Column="4"
                                                        HorizontalAlignment="Right"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="24:00" />
                                                </Grid>
                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="Total" />
                                            </Grid>
                                        </Border>

                                        <ListView
                                            x:Name="OverviewDailyListView"
                                            Grid.Row="2"
                                            HorizontalContentAlignment="Stretch"
                                            IsTabStop="False"
                                            SelectionMode="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:StateStackRowViewModel">
                                                    <Border
                                                        Margin="0,0,0,12"
                                                        Padding="14"
                                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                                        BorderThickness="1"
                                                        CornerRadius="14"
                                                        PointerEntered="OnCardPointerEntered"
                                                        PointerExited="OnCardPointerExited"
                                                        PointerPressed="OnCardPointerPressed"
                                                        PointerReleased="OnCardPointerReleased">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="140" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="90" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Foreground="{ThemeResource BrushTextPrimary}"
                                                                Text="{x:Bind Label}" />

                                                            <Border
                                                                Grid.Column="1"
                                                                Height="50"
                                                                Background="{ThemeResource BrushRail}"
                                                                CornerRadius="{StaticResource RadiusPill}">
                                                                <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                    <Grid Width="960" Height="50">
                                                                        <ItemsControl ItemsSource="{x:Bind Columns}" UseLayoutRounding="False">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <StackPanel Orientation="Horizontal" />
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate x:DataType="local:StackedColumnViewModel">
                                                                                    <Grid Width="{x:Bind Width}" Height="46">
                                                                                        <ItemsControl ItemsSource="{x:Bind Entries}">
                                                                                            <ItemsControl.ItemsPanel>
                                                                                                <ItemsPanelTemplate>
                                                                                                    <StackPanel Orientation="Vertical" />
                                                                                                </ItemsPanelTemplate>
                                                                                            </ItemsControl.ItemsPanel>
                                                                                            <ItemsControl.ItemTemplate>
                                                                                                <DataTemplate x:DataType="local:StackedEntryViewModel">
                                                                                                    <Border
                                                                                                        Height="{x:Bind Height}"
                                                                                                        Background="{x:Bind Fill}"
                                                                                                        CornerRadius="{StaticResource RadiusSegment}">
                                                                                                        <ToolTipService.ToolTip>
                                                                                                            <TextBlock Text="{x:Bind Tooltip}" />
                                                                                                        </ToolTipService.ToolTip>
                                                                                                    </Border>
                                                                                                </DataTemplate>
                                                                                            </ItemsControl.ItemTemplate>
                                                                                        </ItemsControl>
                                                                                    </Grid>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </Grid>
                                                                </Viewbox>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="2"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Right"
                                                                FontSize="14"
                                                                Foreground="{ThemeResource BrushTextPrimary}"
                                                                Text="{x:Bind TotalLabel}" />
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>

                                    <Border
                                        x:Name="OverviewWeekHeader"
                                        Grid.Row="2"
                                        Margin="0,0,0,12"
                                        Padding="14"
                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="14"
                                        Visibility="Collapsed">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="90" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource BrushTextSecondary}"
                                                Text="Date" />
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    x:Name="WeekTick00TextBlock"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="00:00" />
                                                <TextBlock
                                                    x:Name="WeekTick06TextBlock"
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="06:00" />
                                                <TextBlock
                                                    x:Name="WeekTick12TextBlock"
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="12:00" />
                                                <TextBlock
                                                    x:Name="WeekTick18TextBlock"
                                                    Grid.Column="3"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="18:00" />
                                                <TextBlock
                                                    x:Name="WeekTick24TextBlock"
                                                    Grid.Column="4"
                                                    HorizontalAlignment="Right"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="24:00" />
                                            </Grid>
                                            <TextBlock
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource BrushTextSecondary}"
                                                Text="Total" />
                                        </Grid>
                                    </Border>

                                    <ListView
                                        x:Name="OverviewListView"
                                        Grid.Row="3"
                                        HorizontalContentAlignment="Stretch"
                                        IsTabStop="False"
                                        SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:TimelineRowViewModel">
                                                <Border
                                                    Margin="0,0,0,12"
                                                    Padding="14"
                                                    Background="{ThemeResource BrushCardBackgroundSoft}"
                                                    BorderBrush="{ThemeResource BrushBorderSoft}"
                                                    BorderThickness="1"
                                                    CornerRadius="14"
                                                    PointerEntered="OnCardPointerEntered"
                                                    PointerExited="OnCardPointerExited"
                                                    PointerPressed="OnCardPointerPressed"
                                                    PointerReleased="OnCardPointerReleased">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="140" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="90" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Foreground="{ThemeResource BrushTextPrimary}"
                                                            Text="{x:Bind BucketLabel}" />

                                                        <Border
                                                            Grid.Column="1"
                                                            Height="50"
                                                            Background="{ThemeResource BrushRail}"
                                                            CornerRadius="{StaticResource RadiusPill}">
                                                            <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                <Grid Width="760" Height="50">
                                                                    <ItemsControl ItemsSource="{x:Bind Segments}" UseLayoutRounding="False">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal" />
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate x:DataType="local:TimelineSegmentViewModel">
                                                                                <Border
                                                                                    Width="{x:Bind Width}"
                                                                                    Height="46"
                                                                                    Background="{x:Bind Fill}"
                                                                                    CornerRadius="{StaticResource RadiusSegment}">
                                                                                    <ToolTipService.ToolTip>
                                                                                        <TextBlock Text="{x:Bind Tooltip}" />
                                                                                    </ToolTipService.ToolTip>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Viewbox>
                                                        </Border>

                                                        <TextBlock
                                                            Grid.Column="2"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Right"
                                                            FontSize="14"
                                                            Foreground="{ThemeResource BrushTextPrimary}"
                                                            Text="{x:Bind TotalLabel}" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                </Grid>
                            </StackPanel>

                            <StackPanel Spacing="10">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{ThemeResource BrushTextPrimary}"
                                    Text="アプリ別タイムライン" />
                                <Grid Margin="0,10,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Grid.Row="0"
                                        Margin="0,10,0,10"
                                        Padding="14"
                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="14">
                                        <ItemsControl x:Name="AppLegendItemsControl">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="local:LegendItemViewModel">
                                                    <StackPanel Margin="0,0,22,0" Orientation="Horizontal" Spacing="8">
                                                        <Border
                                                            Width="14"
                                                            Height="14"
                                                            VerticalAlignment="Center"
                                                            Background="{x:Bind Fill}"
                                                            CornerRadius="7" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{ThemeResource BrushTextSecondary}"
                                                            Text="{x:Bind Label}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Border>
                                    <Border
                                        x:Name="AppSelectorCard"
                                        Grid.Row="1"
                                        Margin="0,0,0,12"
                                        Padding="14"
                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="14">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="12" />
                                                <ColumnDefinition Width="280" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{ThemeResource BrushTextPrimary}"
                                                Text="アプリ" />
                                            <ComboBox
                                                x:Name="AppComboBox"
                                                Grid.Column="2"
                                                MinHeight="40"
                                                SelectionChanged="OnAppSelectionChanged" />
                                        </Grid>
                                    </Border>

                                    <Grid
                                        x:Name="AppDailyPanel"
                                        Grid.Row="3"
                                        Margin="0,0,0,10"
                                        Visibility="Collapsed">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="14"
                                            Background="{ThemeResource BrushCardBackgroundSoft}"
                                            BorderBrush="{ThemeResource BrushBorderSoft}"
                                            BorderThickness="1"
                                            CornerRadius="14">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="90" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    x:Name="AppHeaderLabelTextBlock"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="App" />
                                                <Grid Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        x:Name="AppTick00TextBlock"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="00:00" />
                                                    <TextBlock
                                                        x:Name="AppTick06TextBlock"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="06:00" />
                                                    <TextBlock
                                                        x:Name="AppTick12TextBlock"
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="12:00" />
                                                    <TextBlock
                                                        x:Name="AppTick18TextBlock"
                                                        Grid.Column="3"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="18:00" />
                                                    <TextBlock
                                                        x:Name="AppTick24TextBlock"
                                                        Grid.Column="4"
                                                        HorizontalAlignment="Right"
                                                        FontSize="12"
                                                        Foreground="{ThemeResource BrushTextSecondary}"
                                                        Text="24:00" />
                                                </Grid>
                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="Total" />
                                            </Grid>
                                        </Border>

                                        <ListView
                                            x:Name="AppDailyListView"
                                            Grid.Row="2"
                                            HorizontalContentAlignment="Stretch"
                                            IsTabStop="False"
                                            SelectionMode="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:StateLaneViewModel">
                                                    <Border
                                                        Margin="0,0,0,12"
                                                        Padding="14"
                                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                                        BorderThickness="1"
                                                        CornerRadius="14"
                                                        PointerEntered="OnCardPointerEntered"
                                                        PointerExited="OnCardPointerExited"
                                                        PointerPressed="OnCardPointerPressed"
                                                        PointerReleased="OnCardPointerReleased">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="140" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="90" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Foreground="{ThemeResource BrushTextPrimary}"
                                                                Text="{x:Bind Label}" />

                                                            <Border
                                                                Grid.Column="1"
                                                                Height="50"
                                                                Background="{ThemeResource BrushRail}"
                                                                CornerRadius="{StaticResource RadiusPill}">
                                                                <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                    <Grid Width="960" Height="50">
                                                                        <ItemsControl ItemsSource="{x:Bind Segments}" UseLayoutRounding="False">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <StackPanel Orientation="Horizontal" />
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate x:DataType="local:AbsoluteSegmentViewModel">
                                                                                    <Border
                                                                                        Width="{x:Bind Width}"
                                                                                        Height="46"
                                                                                        Background="{x:Bind Fill}"
                                                                                        CornerRadius="{StaticResource RadiusSegment}">
                                                                                        <ToolTipService.ToolTip>
                                                                                            <TextBlock Text="{x:Bind Tooltip}" />
                                                                                        </ToolTipService.ToolTip>
                                                                                    </Border>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </Grid>
                                                                </Viewbox>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="2"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Right"
                                                                FontSize="14"
                                                                Foreground="{ThemeResource BrushTextPrimary}"
                                                                Text="{x:Bind TotalLabel}" />
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>

                                    <Border
                                        x:Name="AppWeekHeader"
                                        Grid.Row="5"
                                        Margin="0,0,0,12"
                                        Padding="14"
                                        Background="{ThemeResource BrushCardBackgroundSoft}"
                                        BorderBrush="{ThemeResource BrushBorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="14"
                                        Visibility="Collapsed">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="90" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource BrushTextSecondary}"
                                                Text="Date" />
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    x:Name="AppWeekTick00TextBlock"
                                                    Grid.Column="0"
                                                    HorizontalAlignment="Left"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="00:00" />
                                                <TextBlock
                                                    x:Name="AppWeekTick06TextBlock"
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="06:00" />
                                                <TextBlock
                                                    x:Name="AppWeekTick12TextBlock"
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="12:00" />
                                                <TextBlock
                                                    x:Name="AppWeekTick18TextBlock"
                                                    Grid.Column="3"
                                                    HorizontalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="18:00" />
                                                <TextBlock
                                                    x:Name="AppWeekTick24TextBlock"
                                                    Grid.Column="4"
                                                    HorizontalAlignment="Right"
                                                    FontSize="12"
                                                    Foreground="{ThemeResource BrushTextSecondary}"
                                                    Text="24:00" />
                                            </Grid>
                                            <TextBlock
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                Foreground="{ThemeResource BrushTextSecondary}"
                                                Text="Total" />
                                        </Grid>
                                    </Border>

                                    <ListView
                                        x:Name="AppTimelineListView"
                                        Grid.Row="6"
                                        HorizontalContentAlignment="Stretch"
                                        IsTabStop="False"
                                        SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:TimelineRowViewModel">
                                                <Border
                                                    Margin="0,0,0,12"
                                                    Padding="14"
                                                    Background="{ThemeResource BrushCardBackgroundSoft}"
                                                    BorderBrush="{ThemeResource BrushBorderSoft}"
                                                    BorderThickness="1"
                                                    CornerRadius="14"
                                                    PointerEntered="OnCardPointerEntered"
                                                    PointerExited="OnCardPointerExited"
                                                    PointerPressed="OnCardPointerPressed"
                                                    PointerReleased="OnCardPointerReleased">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="140" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="90" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Foreground="{ThemeResource BrushTextPrimary}"
                                                            Text="{x:Bind BucketLabel}" />

                                                        <Border
                                                            Grid.Column="1"
                                                            Height="50"
                                                            Background="{ThemeResource BrushRail}"
                                                            CornerRadius="{StaticResource RadiusPill}">
                                                            <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                <Grid Width="760" Height="50">
                                                                    <ItemsControl ItemsSource="{x:Bind Segments}" UseLayoutRounding="False">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal" />
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate x:DataType="local:TimelineSegmentViewModel">
                                                                                <Border
                                                                                    Width="{x:Bind Width}"
                                                                                    Height="46"
                                                                                    Background="{x:Bind Fill}"
                                                                                    CornerRadius="{StaticResource RadiusSegment}">
                                                                                    <ToolTipService.ToolTip>
                                                                                        <TextBlock Text="{x:Bind Tooltip}" />
                                                                                    </ToolTipService.ToolTip>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Viewbox>
                                                        </Border>

                                                        <TextBlock
                                                            Grid.Column="2"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Right"
                                                            FontSize="14"
                                                            Foreground="{ThemeResource BrushTextPrimary}"
                                                            Text="{x:Bind TotalLabel}" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
