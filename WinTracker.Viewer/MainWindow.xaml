<Window
    x:Class="WinTracker.Viewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinTracker.Viewer"
    Title="WinTracker Viewer">

    <Grid
        Background="{StaticResource BrushPageBackground}"
        RequestedTheme="Light">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="28" Spacing="16">
                <Grid>
                    <Border
                        Margin="0,4,0,0"
                        Background="{StaticResource BrushCardShadow}"
                        CornerRadius="{StaticResource RadiusCard}" />
                    <Border
                        x:Name="HeaderCard"
                        Padding="20"
                        Background="{StaticResource BrushCardBackground}"
                        BorderBrush="{StaticResource BrushBorderSoft}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Spacing="6">
                                <TextBlock
                                    FontSize="34"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource BrushTextPrimary}"
                                    Text="WinTracker Viewer" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{StaticResource BrushTextSecondary}"
                                    Text="Application usage timeline" />
                            </StackPanel>
                            <TextBlock
                                x:Name="StatusTextBlock"
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                FontSize="12"
                                Foreground="{StaticResource BrushTextSecondary}"
                                Text="Ready" />
                        </Grid>
                    </Border>
                </Grid>

                <Grid>
                    <Border
                        Margin="0,4,0,0"
                        Background="{StaticResource BrushCardShadow}"
                        CornerRadius="{StaticResource RadiusCard}" />
                    <Border
                        x:Name="ControlCard"
                        Padding="20"
                        Background="{StaticResource BrushCardBackground}"
                        BorderBrush="{StaticResource BrushBorderSoft}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{StaticResource BrushTextPrimary}"
                                Text="期間" />
                            <ComboBox
                                x:Name="RangeComboBox"
                                Grid.Column="2"
                                MinHeight="40"
                                SelectedIndex="0"
                                SelectionChanged="OnRangeSelectionChanged">
                                <ComboBoxItem Content="24h" />
                                <ComboBoxItem Content="1week" />
                            </ComboBox>
                            <Button
                                x:Name="RefreshButton"
                                Grid.Column="4"
                                MinHeight="40"
                                Padding="16,10"
                                Background="{StaticResource BrushStateActive}"
                                Foreground="{StaticResource BrushTextPrimary}"
                                FontSize="14"
                                FontWeight="SemiBold"
                                CornerRadius="12"
                                Click="OnRefreshClicked"
                                PointerEntered="OnRefreshButtonPointerEntered"
                                PointerExited="OnRefreshButtonPointerExited"
                                PointerPressed="OnRefreshButtonPointerPressed"
                                PointerReleased="OnRefreshButtonPointerReleased"
                                Content="更新" />
                        </Grid>
                    </Border>
                </Grid>

                <Grid>
                    <Border
                        Margin="0,4,0,0"
                        Background="{StaticResource BrushCardShadow}"
                        CornerRadius="{StaticResource RadiusCard}" />
                    <Border
                        Padding="20"
                        Background="{StaticResource BrushCardBackground}"
                        BorderBrush="{StaticResource BrushBorderSoft}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource RadiusCard}">
                        <Pivot Foreground="{StaticResource BrushTextPrimary}">
                            <Pivot.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource BrushTextPrimary}"
                                        Text="{Binding}" />
                                </DataTemplate>
                            </Pivot.HeaderTemplate>
                            <PivotItem Header="一覧タイムライン">
                                <Grid Margin="0,20,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid
                                        x:Name="OverviewDailyPanel"
                                        Grid.Row="0"
                                        Margin="0,0,0,10"
                                        Visibility="Collapsed">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="14"
                                            Background="{StaticResource BrushCardBackgroundSoft}"
                                            BorderBrush="{StaticResource BrushBorderSoft}"
                                            BorderThickness="1"
                                            CornerRadius="14">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="90" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{StaticResource BrushTextSecondary}"
                                                    Text="State" />
                                                <Grid Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        x:Name="Tick00TextBlock"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="00:00" />
                                                    <TextBlock
                                                        x:Name="Tick06TextBlock"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="06:00" />
                                                    <TextBlock
                                                        x:Name="Tick12TextBlock"
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="12:00" />
                                                    <TextBlock
                                                        x:Name="Tick18TextBlock"
                                                        Grid.Column="3"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="18:00" />
                                                    <TextBlock
                                                        x:Name="Tick24TextBlock"
                                                        Grid.Column="4"
                                                        HorizontalAlignment="Right"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="24:00" />
                                                </Grid>
                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    FontSize="12"
                                                    Foreground="{StaticResource BrushTextSecondary}"
                                                    Text="Total" />
                                            </Grid>
                                        </Border>

                                        <ListView
                                            x:Name="OverviewDailyListView"
                                            Grid.Row="2"
                                            HorizontalContentAlignment="Stretch"
                                            IsTabStop="False"
                                            SelectionMode="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:StateLaneViewModel">
                                                    <Border
                                                        Margin="0,0,0,12"
                                                        Padding="14"
                                                        Background="{StaticResource BrushCardBackgroundSoft}"
                                                        BorderBrush="{StaticResource BrushBorderSoft}"
                                                        BorderThickness="1"
                                                        CornerRadius="14"
                                                        PointerEntered="OnCardPointerEntered"
                                                        PointerExited="OnCardPointerExited"
                                                        PointerPressed="OnCardPointerPressed"
                                                        PointerReleased="OnCardPointerReleased">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="140" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="90" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Foreground="{StaticResource BrushTextPrimary}"
                                                                Text="{x:Bind Label}" />

                                                            <Border
                                                                Grid.Column="1"
                                                                Height="50"
                                                                Background="{StaticResource BrushRail}"
                                                                CornerRadius="{StaticResource RadiusPill}">
                                                                <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                    <Grid Width="960" Height="50">
                                                                        <ItemsControl ItemsSource="{x:Bind Segments}">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <Canvas />
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate x:DataType="local:AbsoluteSegmentViewModel">
                                                                                    <Border
                                                                                        Width="{x:Bind Width}"
                                                                                        Height="46"
                                                                                        Canvas.Left="{x:Bind Left}"
                                                                                        Background="{x:Bind Fill}"
                                                                                        CornerRadius="{StaticResource RadiusSegment}">
                                                                                        <ToolTipService.ToolTip>
                                                                                            <TextBlock Text="{x:Bind Tooltip}" />
                                                                                        </ToolTipService.ToolTip>
                                                                                    </Border>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </Grid>
                                                                </Viewbox>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="2"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Right"
                                                                FontSize="14"
                                                                Foreground="{StaticResource BrushTextPrimary}"
                                                                Text="{x:Bind TotalLabel}" />
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>

                                    <ListView
                                        x:Name="OverviewListView"
                                        Grid.Row="1"
                                        HorizontalContentAlignment="Stretch"
                                        IsTabStop="False"
                                        SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:TimelineRowViewModel">
                                                <Border
                                                    Margin="0,0,0,12"
                                                    Padding="14"
                                                    Background="{StaticResource BrushCardBackgroundSoft}"
                                                    BorderBrush="{StaticResource BrushBorderSoft}"
                                                    BorderThickness="1"
                                                    CornerRadius="14"
                                                    PointerEntered="OnCardPointerEntered"
                                                    PointerExited="OnCardPointerExited"
                                                    PointerPressed="OnCardPointerPressed"
                                                    PointerReleased="OnCardPointerReleased">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="140" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="90" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Foreground="{StaticResource BrushTextPrimary}"
                                                            Text="{x:Bind BucketLabel}" />

                                                        <Border
                                                            Grid.Column="1"
                                                            Height="50"
                                                            Background="{StaticResource BrushRail}"
                                                            CornerRadius="{StaticResource RadiusPill}">
                                                            <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                <Grid Width="760" Height="50">
                                                                    <ItemsControl ItemsSource="{x:Bind Segments}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal" />
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate x:DataType="local:TimelineSegmentViewModel">
                                                                                <Border
                                                                                    Width="{x:Bind Width}"
                                                                                    Height="46"
                                                                                    Background="{x:Bind Fill}"
                                                                                    CornerRadius="{StaticResource RadiusSegment}">
                                                                                    <ToolTipService.ToolTip>
                                                                                        <TextBlock Text="{x:Bind Tooltip}" />
                                                                                    </ToolTipService.ToolTip>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Viewbox>
                                                        </Border>

                                                        <TextBlock
                                                            Grid.Column="2"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Right"
                                                            FontSize="14"
                                                            Foreground="{StaticResource BrushTextPrimary}"
                                                            Text="{x:Bind TotalLabel}" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </PivotItem>

                            <PivotItem Header="アプリ別タイムライン">
                                <Grid Margin="0,20,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Border
                                        Margin="0,0,0,12"
                                        Padding="14"
                                        Background="{StaticResource BrushCardBackgroundSoft}"
                                        BorderBrush="{StaticResource BrushBorderSoft}"
                                        BorderThickness="1"
                                        CornerRadius="14">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="12" />
                                                <ColumnDefinition Width="280" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="{StaticResource BrushTextPrimary}"
                                                Text="アプリ" />
                                            <ComboBox
                                                x:Name="AppComboBox"
                                                Grid.Column="2"
                                                MinHeight="40"
                                                SelectionChanged="OnAppSelectionChanged" />
                                        </Grid>
                                    </Border>

                                    <Grid
                                        x:Name="AppDailyPanel"
                                        Grid.Row="2"
                                        Margin="0,0,0,10"
                                        Visibility="Collapsed">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="10" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Border
                                            Margin="0,0,0,12"
                                            Padding="14"
                                            Background="{StaticResource BrushCardBackgroundSoft}"
                                            BorderBrush="{StaticResource BrushBorderSoft}"
                                            BorderThickness="1"
                                            CornerRadius="14">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="90" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Foreground="{StaticResource BrushTextSecondary}"
                                                    Text="State" />
                                                <Grid Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        x:Name="AppTick00TextBlock"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Left"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="00:00" />
                                                    <TextBlock
                                                        x:Name="AppTick06TextBlock"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="06:00" />
                                                    <TextBlock
                                                        x:Name="AppTick12TextBlock"
                                                        Grid.Column="2"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="12:00" />
                                                    <TextBlock
                                                        x:Name="AppTick18TextBlock"
                                                        Grid.Column="3"
                                                        HorizontalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="18:00" />
                                                    <TextBlock
                                                        x:Name="AppTick24TextBlock"
                                                        Grid.Column="4"
                                                        HorizontalAlignment="Right"
                                                        FontSize="12"
                                                        Foreground="{StaticResource BrushTextSecondary}"
                                                        Text="24:00" />
                                                </Grid>
                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    FontSize="12"
                                                    Foreground="{StaticResource BrushTextSecondary}"
                                                    Text="Total" />
                                            </Grid>
                                        </Border>

                                        <ListView
                                            x:Name="AppDailyListView"
                                            Grid.Row="2"
                                            HorizontalContentAlignment="Stretch"
                                            IsTabStop="False"
                                            SelectionMode="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:StateLaneViewModel">
                                                    <Border
                                                        Margin="0,0,0,12"
                                                        Padding="14"
                                                        Background="{StaticResource BrushCardBackgroundSoft}"
                                                        BorderBrush="{StaticResource BrushBorderSoft}"
                                                        BorderThickness="1"
                                                        CornerRadius="14"
                                                        PointerEntered="OnCardPointerEntered"
                                                        PointerExited="OnCardPointerExited"
                                                        PointerPressed="OnCardPointerPressed"
                                                        PointerReleased="OnCardPointerReleased">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="140" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="90" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Foreground="{StaticResource BrushTextPrimary}"
                                                                Text="{x:Bind Label}" />

                                                            <Border
                                                                Grid.Column="1"
                                                                Height="50"
                                                                Background="{StaticResource BrushRail}"
                                                                CornerRadius="{StaticResource RadiusPill}">
                                                                <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                    <Grid Width="960" Height="50">
                                                                        <ItemsControl ItemsSource="{x:Bind Segments}">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <Canvas />
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate x:DataType="local:AbsoluteSegmentViewModel">
                                                                                    <Border
                                                                                        Width="{x:Bind Width}"
                                                                                        Height="46"
                                                                                        Canvas.Left="{x:Bind Left}"
                                                                                        Background="{x:Bind Fill}"
                                                                                        CornerRadius="{StaticResource RadiusSegment}">
                                                                                        <ToolTipService.ToolTip>
                                                                                            <TextBlock Text="{x:Bind Tooltip}" />
                                                                                        </ToolTipService.ToolTip>
                                                                                    </Border>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </Grid>
                                                                </Viewbox>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="2"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Right"
                                                                FontSize="14"
                                                                Foreground="{StaticResource BrushTextPrimary}"
                                                                Text="{x:Bind TotalLabel}" />
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>

                                    <ListView
                                        x:Name="AppTimelineListView"
                                        Grid.Row="4"
                                        HorizontalContentAlignment="Stretch"
                                        IsTabStop="False"
                                        SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="local:TimelineRowViewModel">
                                                <Border
                                                    Margin="0,0,0,12"
                                                    Padding="14"
                                                    Background="{StaticResource BrushCardBackgroundSoft}"
                                                    BorderBrush="{StaticResource BrushBorderSoft}"
                                                    BorderThickness="1"
                                                    CornerRadius="14"
                                                    PointerEntered="OnCardPointerEntered"
                                                    PointerExited="OnCardPointerExited"
                                                    PointerPressed="OnCardPointerPressed"
                                                    PointerReleased="OnCardPointerReleased">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="140" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="90" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="14"
                                                            Foreground="{StaticResource BrushTextPrimary}"
                                                            Text="{x:Bind BucketLabel}" />

                                                        <Border
                                                            Grid.Column="1"
                                                            Height="50"
                                                            Background="{StaticResource BrushRail}"
                                                            CornerRadius="{StaticResource RadiusPill}">
                                                            <Viewbox Stretch="Fill" StretchDirection="Both">
                                                                <Grid Width="760" Height="50">
                                                                    <ItemsControl ItemsSource="{x:Bind Segments}">
                                                                        <ItemsControl.ItemsPanel>
                                                                            <ItemsPanelTemplate>
                                                                                <StackPanel Orientation="Horizontal" />
                                                                            </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate x:DataType="local:TimelineSegmentViewModel">
                                                                                <Border
                                                                                    Width="{x:Bind Width}"
                                                                                    Height="46"
                                                                                    Background="{x:Bind Fill}"
                                                                                    CornerRadius="{StaticResource RadiusSegment}">
                                                                                    <ToolTipService.ToolTip>
                                                                                        <TextBlock Text="{x:Bind Tooltip}" />
                                                                                    </ToolTipService.ToolTip>
                                                                                </Border>
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </Grid>
                                                            </Viewbox>
                                                        </Border>

                                                        <TextBlock
                                                            Grid.Column="2"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Right"
                                                            FontSize="14"
                                                            Foreground="{StaticResource BrushTextPrimary}"
                                                            Text="{x:Bind TotalLabel}" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </PivotItem>
                        </Pivot>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
