<Application
    x:Class="WinTracker.Viewer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <Color x:Key="ColorPageBackground">#FFF6F7FB</Color>
        <Color x:Key="ColorCardBackground">#FFFFFFFF</Color>
        <Color x:Key="ColorCardBackgroundSoft">#FFFDFDFF</Color>
        <Color x:Key="ColorCardShadow">#140E1A2A</Color>
        <Color x:Key="ColorBorderSoft">#FFE9ECF5</Color>
        <Color x:Key="ColorRail">#FFE7EAF4</Color>
        <Color x:Key="ColorTextPrimary">#FF2E3141</Color>
        <Color x:Key="ColorTextSecondary">#FF7D8398</Color>
        <Color x:Key="ColorStateActive">#FFBFA8FF</Color>
        <Color x:Key="ColorStateOpen">#FFB8E9C7</Color>
        <Color x:Key="ColorStateMinimized">#FFF9E6A6</Color>
        <Color x:Key="ColorPastelRed">#FFF8B5B5</Color>
        <SolidColorBrush x:Key="BrushPageBackground" Color="{StaticResource ColorPageBackground}" />
        <SolidColorBrush x:Key="BrushCardBackground" Color="{StaticResource ColorCardBackground}" />
        <SolidColorBrush x:Key="BrushCardBackgroundSoft" Color="{StaticResource ColorCardBackgroundSoft}" />
        <SolidColorBrush x:Key="BrushCardShadow" Color="{StaticResource ColorCardShadow}" />
        <SolidColorBrush x:Key="BrushBorderSoft" Color="{StaticResource ColorBorderSoft}" />
        <SolidColorBrush x:Key="BrushRail" Color="{StaticResource ColorRail}" />
        <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource ColorTextPrimary}" />
        <SolidColorBrush x:Key="BrushTextSecondary" Color="{StaticResource ColorTextSecondary}" />
        <SolidColorBrush x:Key="BrushStateActive" Color="{StaticResource ColorStateActive}" />
        <SolidColorBrush x:Key="BrushStateOpen" Color="{StaticResource ColorStateOpen}" />
        <SolidColorBrush x:Key="BrushStateMinimized" Color="{StaticResource ColorStateMinimized}" />
        <SolidColorBrush x:Key="BrushPastelRed" Color="{StaticResource ColorPastelRed}" />
        <CornerRadius x:Key="RadiusCard">18</CornerRadius>
        <CornerRadius x:Key="RadiusLarge">20</CornerRadius>
        <CornerRadius x:Key="RadiusPill">0</CornerRadius>
        <CornerRadius x:Key="RadiusSegment">0</CornerRadius>
        <Thickness x:Key="SpaceXS">6</Thickness>
        <Thickness x:Key="SpaceSM">10</Thickness>
        <Thickness x:Key="SpaceMD">14</Thickness>
        <Thickness x:Key="SpaceLG">20</Thickness>
        <Thickness x:Key="SpaceXL">28</Thickness>
    </Application.Resources>
</Application>
